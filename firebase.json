{
  "hosting": {
    "site": "pocket-party-landingpage",
    "public": "out",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "redirects": [
      {
        "source": "/links",
        "destination": "https://game.pocketparty.app/links",
        "type": 301
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      },
      {
        "source": "/about",
        "destination": "/about.html"
      },
      {
        "source": "/contact",
        "destination": "/contact.html"
      },
      {
        "source": "/creators",
        "destination": "/creators.html"
      },
      {
        "source": "/press",
        "destination": "/press.html"
      },
      {
        "source": "/privacy",
        "destination": "/privacy.html"
      }
    ]
  }
}
